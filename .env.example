# Application
APP_NAME=RAG File Assistant
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO

# File Storage
FILES_ROOT_PATH=/data/files
MAX_FILE_SIZE_MB=500

# Ollama (Local - FREE)
OLLAMA_HOST=http://localhost:11434
EMBEDDING_MODEL=nomic-embed-text
EMBEDDING_DIMENSIONS=768
LLM_MODEL=llama3.2:3b
LLM_TEMPERATURE=0.1

# Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=file_chunks
VECTOR_SIZE=768

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=rag_assistant
POSTGRES_USER=postgres
POSTGRES_PASSWORD=root

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Chunking
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MIN_CHUNK_SIZE=10

# Retrieval
TOP_K_RESULTS=10
SIMILARITY_THRESHOLD=0.7
RERANK_TOP_K=5

# Processing
BATCH_SIZE=50
MAX_WORKERS=4

# Sentry (Optional)
SENTRY_DSN=