# Application
APP_NAME=RAG File Assistant
APP_VERSION=0.2.0
DEBUG=true
LOG_LEVEL=INFO

# File Storage
FILES_ROOT_PATH=/data/files
MAX_FILE_SIZE_MB=500

# Ollama (Local - FREE)
OLLAMA_HOST=http://localhost:11434
EMBEDDING_MODEL=nomic-embed-text
EMBEDDING_DIMENSIONS=768
LLM_MODEL=llama3.2:3b
LLM_TEMPERATURE=0.1
MAX_TOKENS=4096

# Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=file_chunks
VECTOR_SIZE=768

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=rag_assistant
POSTGRES_USER=postgres
POSTGRES_PASSWORD=root

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Chunking
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MIN_CHUNK_SIZE=10

# Retrieval
TOP_K_RESULTS=10
SIMILARITY_THRESHOLD=0.7
RERANK_TOP_K=5

# Processing
BATCH_SIZE=50
MAX_WORKERS=4

# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_ALLOWED_USERS=  # Leave empty to allow all, or comma-separated user IDs
TELEGRAM_MAX_VOICE_SIZE_MB=20

# Whisper (Voice Transcription)
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8

# Celery (uses Redis by default)
CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=

# Rate Limiting
RATE_LIMIT_MESSAGES=20
RATE_LIMIT_VOICE=5

# Agent
AGENT_MAX_ITERATIONS=10
AGENT_TEMPERATURE=0.1
AGENT_THINKING_ENABLED=true

# Memory
MEMORY_MAX_MESSAGES=20
MEMORY_SUMMARY_THRESHOLD=10

# Sentry (Optional)
SENTRY_DSN=